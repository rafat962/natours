extends base


mixin over(icon,name)
    .card__data
        svg.card__icon
            use(xlink:href=`img/icons.svg#icon-${icon}`)
        span= name

block content 
    main.main
        .card-container
            each tour in Tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/tours/${tour.imageCover}` alt='Tour 1')
                        h3.heading-tertirary
                            span= tour.name
                    .card__details
                        h4.card__sub-heading #{tour.difficulty}  #{tour.duration}-day tour
                        p.card__text= tour.summary
                        +over('map-pin',`${tour.startLocation.description}`)    
                        +over('calendar','April 2021')    
                        +over('flag',`${tour.locations.length} stops`)    
                        +over('user',`${tour.maxGroupSize}`)    
                    .card__footer
                        p
                            span.card__footer-value #{tour.price} $ 
                            span.card__footer-text  per person
                        p.card__ratings
                            span.card__footer-value #{tour.ratingsAverage}  
                            span.card__footer-text   rating (#{tour.ratingsQuantity})
                        a.btn.btn--green.btn--small(href=`${tour.id}`) Details
